<?xml version="1.0" encoding="UTF-8"?>
<Root>

	<!--
	<Group>节点：
		id：组ID
		player_seats：玩家的座位（用分号分割），格式: 座位1;座位2;座位3
		max_time：游戏的最大时间(单位:秒)
		
		<Round>节点：
					level：关卡Id,必须是顺序的,从1开始
					rest_time：每一关开始时的休息时间(玩家选将前)
					sel_general_time：玩家选将的等待时间
					act_type：行动类型 0:逆时针行动 1: 双方交替行动
					first_turn_seat：关卡开始时 首回合行动的座位ID
					player_dealcard：关卡开始时，玩家摸牌的数量
					reward_condition:奖励配置对应 RewardCondition 中的id
		<Monster>节点：
					id ：上场的武将ID
					seat ：坐在那个座位
					boss ：是否是BOSS
					dealcard_count ：关卡开始时，这个角色摸牌的数量
		<RewardCondition>
					id 必须唯一
					rewardcnt 奖励胜场数 condition节点里的内容必须都返回真才能完成这个奖励。
		<Condition>
					ach_id 战功条件id
					compare 比较条件 1相等 2 >; 3 >= ;4< ; 5 <=
					value  比较值
		奖励条件ID
			<Condition ach_id="60113" compare="3" value="1" desc="boss被击杀，自己存活"/>
			<Condition ach_id="60114" compare="3" value="1" desc="亲手击杀的敌人数量"/>
			<Condition ach_id="60115" compare="3" value="1" desc="对敌人造成过N伤害"/>
			<Condition ach_id="60113" compare="3" value="1" desc="boss被击杀，自己存活"/>
			<Condition ach_id="60117" compare="5" value="0" desc="受到“中毒”伤害的次数"/>
			<Condition ach_id="60116" compare="5" value="0" desc="受到“行夏”伤害的次数"/>
	-->
	
	
